{
  "name": "animalese-typing",
  "productName": "Animalese Typing",
  "version": "0.0.4",
  "description": "Animalese Typing",
  "repository": "https://github.com/joshxviii/animalese-typing-desktop",
  "type": "commonjs",
  "author": {
    "name": "joshxviii",
    "email": "dagexviii.dev@gmail.com"
  },
  "license": "MIT",
  "keywords": [],
  "main": "main.cjs",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac-listener":   "swiftc -o libs/key-listeners/animalese-listener-x64 libs/key-listeners/mac-key-listener.swift -target x86_64-apple-macosx11.0 && swiftc libs/key-listeners/mac-key-listener.swift -o animalese-listener-arm64 -target arm64-apple-macosx11.0 && lipo -create -output animalese-listener animalese-listener-x64 animalese-listener-arm64 && chmod +x libs/key-listeners/animalese-listener",
    "build:win-listener":   "g++    -o libs/key-listeners/animalese-listener.exe libs/key-listeners/win-key-listener.cpp -mwindows -static -static-libgcc -static-libstdc++",
    "build:linux-listener": "g++    -o libs/key-listeners/animalese-listener libs/key-listeners/linux-key-listener.cpp -lX11 -lXtst && chmod +x libs/key-listeners/animalese-listener",
    "build:mac":    "npm run build:mac-listener && electron-builder --mac -p never",
    "build:win":    "npm run build:win-listener && electron-builder --win -p never",
    "build:linux":  "npm run build:linux-listener && electron-builder --linux -p never"
  },
  "build": {
    "icon": "assets/images/icon_256x256.png",
    "publish": {
      "provider": "github",
      "owner": "joshxviii",
      "repo": "animalese-typing-desktop"
    },
    "asar": true,
    "appId": "com.joshxviii.animalese-typing",
    "productName": "Animalese Typing",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "exports"
    },
    "nsis": {
      "deleteAppDataOnUninstall": true
    },
    "win": {
      "target": "nsis",
      "icon": "assets/images/icon.png",
      "extraResources": [
        {
          "from": "libs/key-listeners/animalese-listener.exe",
          "to": "animalese-listener.exe"
        }
      ],
      "artifactName": "AnimaleseTypingSetup.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "icon": "assets/images/icon.png",
      "extraResources": [
        {
          "from": "animalese-listener",
          "to": "animalese-listener"
        },
        {
          "from": "assets/images/icon.png",
          "to": "icon.png"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "executableArgs": [
        "--no-sandbox"
      ],
      "category": "Utility",
      "icon": "assets/images/icon.png",
      "extraResources": [
        {
          "from": "libs/key-listeners/animalese-listener",
          "to": "animalese-listener"
        }
      ],
      "artifactName": "AnimaleseTypingSetup.${ext}"
    },
    "afterSign": "build/after-sign-hook.js"
  },
  "dependencies": {
    "child_process": "^1.0.2",
    "electron-is-dev": "^3.0.1",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.6.2",
    "howler": "^2.2.4",
    "store": "^2.0.12"
  },
  "devDependencies": {
    "electron": "^36.2.1",
    "electron-builder": "~24.13.3",
    "electron-rebuild": "^3.2.9"
  }
  ,
  "optionalDependencies": {
    "@deepfocus/get-windows": "^1.0.21"
  }
}
